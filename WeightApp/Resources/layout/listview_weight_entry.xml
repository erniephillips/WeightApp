<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="80dp"
  android:id="@+id/fragment_main">
  <TextView
    android:text="Click any of the below items to update your profile information."
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <!--Weight-->
  <TextView
    android:text="Weight"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_weight" />
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_weight_right"
    android:layout_toRightOf="@+id/listview_txt_weight"/>

  <!--Height-->
  <TextView
    android:text="Height: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_height" />
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_height_right"
    android:layout_toRightOf="@+id/listview_txt_height"/>

  <!--Gender-->
  <TextView
    android:text="Gender: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_gender" />
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_gender_right"
    android:layout_toRightOf="@+id/listview_txt_gender"/>

  <!--Goal Weight-->
  <TextView
    android:text="Goal Weight: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_goal_weight" />
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_goal_weight_right"
    android:layout_toRightOf="@+id/listview_txt_goal_weight"/>

  <!--Goal Date-->
  <TextView
    android:text="Goal Target Date: "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_goal_date" />
  <TextView
    android:text=""
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listview_txt_goal_date_right"
    android:layout_toRightOf="@+id/listview_txt_goal_date"/>
</LinearLayout>