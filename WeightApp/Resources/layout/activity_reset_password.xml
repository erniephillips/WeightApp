<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
    TextView's for labels and EditText for getting value from user
    -->
    <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/rp_appbar"
      android:theme="@style/AppTheme.AppBarOverlay">

      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetStart="5dp">
        <ImageButton
          android:id="@+id/btn_rp_back"
          android:src="@drawable/ic_back_arrow"
          android:background="@android:color/transparent"
          android:layout_width="50.0dp"
          android:layout_height="50.0dp"
          android:layout_marginLeft="-20dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_gravity="top|left" />
      </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    
    <TextView
      android:id="@+id/tv_reset_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/rp_appbar"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Reset Password"/>
    <EditText
      android:id="@+id/et_rp_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_reset_password"
      android:hint="Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_rp_confirm_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_rp_password"
      android:hint="Confirm Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <!-- Reset Password Button -->
    <androidx.appcompat.widget.AppCompatButton 
      android:id="@+id/btn_reset_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_rp_confirm_password"
      android:layout_centerHorizontal="true"
      android:background="#1874CD"
      android:text="Reset"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />
    <TextView
      android:id="@+id/txt_rp_errors"
      app:layout_marginLeftPercent="10%"
      android:text=""
      android:layout_below="@+id/btn_reset_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#ff0000"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>