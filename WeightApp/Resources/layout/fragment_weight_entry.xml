<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!--Header-->
  <TextView
    android:id="@+id/tv_weight_entry"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="10%"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="32sp"
    android:text="Weight Entry" />

  <!--Listview-->
  <ListView
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_marginTopPercent="5%"
    android:id="@+id/weight_entry_listView"
    android:layout_below="@+id/tv_weight_entry"/>

  <!--Divider-->
  <View
    android:id="@+id/we_divider_one"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/weight_entry_listView"
    android:background="?android:attr/listDivider" />

  <!--ImageView-->
  <RelativeLayout
    android:padding="15dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/we_divider_one">
    <TextView
      android:id="@+id/weight_entry_image_text"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_alignParentLeft="true"
      android:text="Image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <ImageButton
      android:id="@+id/we_camera_icon_click"
      android:src="@android:drawable/ic_menu_camera"
      android:background="?android:attr/selectableItemBackgroundBorderless"
      android:tag="ICON_IMAGE"
      android:layout_width="35.0dp"
      android:layout_height="35.0dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      app:layout_marginRightPercent="3%"
      app:layout_marginTopPercent="13%"
      android:layout_gravity="top|end" />
    <!--<ImageButton
      android:id="@+id/btn_fp_back"
      android:src="@drawable/ic_back_arrow"
      android:layout_toRightOf="@+id/weight_entry_image_text"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:gravity="right"
      android:textAlignment="gravity"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      android:layout_height="32.5dp"
      android:layout_width="32.5dp" />-->
    <!--<TextView
      android:id="@+id/weight_entry_image_image_button"
      android:layout_toRightOf="@+id/weight_entry_image_text"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_alignParentRight="true"
      android:gravity="right"
      android:textAlignment="gravity"
      android:text="N/a"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />-->
  </RelativeLayout>
</android.support.percent.PercentRelativeLayout>