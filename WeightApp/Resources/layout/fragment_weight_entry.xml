<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!--Header-->
  <TextView
    android:id="@+id/tv_weight_entry"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="10%"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="32sp"
    android:text="Weight Entry" />

  <!--Listview-->
  <ListView
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_marginTopPercent="5%"
    android:id="@+id/weight_entry_listView"
    android:layout_below="@+id/tv_weight_entry"/>

  <!--Divider-->
  <View
      android:id="@+id/we_divider_one"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@+id/weight_entry_listView"
      android:background="?android:attr/listDivider" />

  <!--ImageView-->
  <RelativeLayout
    android:padding="15dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/we_divider_one">
    <TextView
      android:id="@+id/weight_entry_image_text"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_alignParentLeft="true"
      android:text="Image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
      android:id="@+id/weight_entry_image_image_button"
      android:layout_toRightOf="@+id/weight_entry_image_text"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_alignParentRight="true"
      android:gravity="right"
      android:textAlignment="gravity"
      android:text="N/a"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>
</android.support.percent.PercentRelativeLayout>