<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/ma_scroll">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Header - View User Info-->
    <TextView
      android:id="@+id/tv_your_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Your Info"/>

    <!--Username-->
    <TextView
      android:id="@+id/tv_ma_user_username_header"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="3%"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_your_info"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="Username:"/>
    <TextView
      android:id="@+id/tv_ma_user_username"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_username_header"
      android:textSize="20sp"
      android:text=""/>

    <!--Name-->
    <TextView
      android:id="@+id/tv_ma_user_name_header"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="2%"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_username"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="Name: "/>
    <TextView
      android:id="@+id/tv_ma_user_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_name_header"
      android:textSize="20sp"
      android:text=""/>

    <!--Email-->
    <TextView
      android:id="@+id/tv_ma_user_email_header"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="2%"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_name"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="Email: "/>
    <TextView
      android:id="@+id/tv_ma_user_email"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_email_header"
      android:textSize="20sp"
      android:text=""/>

    <!--Last Login-->
    <TextView
      android:id="@+id/tv_ma_user_last_login_header"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="2%"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_email"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="Last Login: "/>
    <TextView
      android:id="@+id/tv_ma_user_last_login"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_ma_user_last_login_header"
      android:textSize="20sp"
      android:text=""/>

    <!--Divider-->
    <View
      android:id="@+id/ma_divider_one"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/tv_ma_user_last_login"
      app:layout_marginTopPercent="3%"
      android:layout_marginTop="4dp"
      android:background="@android:color/darker_gray" />

    <!--Header - Edit User Info-->
    <TextView
      android:id="@+id/tv_manage_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/ma_divider_one"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Manage Info"/>

     <!--Name-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_name"
      android:layout_below="@+id/tv_manage_info"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your name" />
    </com.google.android.material.textfield.TextInputLayout>
    
     <!--Email-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_email"
      android:layout_below="@+id/et_ma_name"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Update Button for user info -->
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_ma_update_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_email"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />

    <!--Divider-->
    <View
      android:id="@+id/ma_divider_two"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/btn_ma_update_info"
      app:layout_marginTopPercent="3%"
      android:layout_marginTop="4dp"
      android:background="@android:color/darker_gray" />

    <!--Header - Change Password-->
    <TextView
      android:id="@+id/tv_change_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/ma_divider_two"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Change Password"/>

    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_current_password"
      android:layout_below="@+id/tv_change_password"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <!--New Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_password"
      android:layout_below="@+id/et_ma_current_password"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <!--Confirm Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_confirm_password"
      android:layout_below="@+id/et_ma_password"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <!--Submit Password Button-->
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_ma_change_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_confirm_password"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />

   
    <!--Divider-->
    <View
      android:id="@+id/ma_divider_three"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@+id/btn_ma_change_password"
      app:layout_marginTopPercent="3%"
      android:layout_marginTop="4dp"
      android:background="@android:color/darker_gray" />

    <!--Header - Security Question -->
    <TextView
      android:id="@+id/tv_update_sec_question"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/ma_divider_three"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Security Info"/>

    <!--Security Question-->
    <TextView
      android:id="@+id/spinner_ma_prompt_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_update_sec_question"
      android:text="@string/security_question_prompt"
      app:layout_marginLeftPercent="11%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"/>
    <Spinner
      android:id="@+id/spinner_ma_sec_question"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spinner_ma_prompt_text"
      android:prompt="@string/security_question_prompt"
      style="@android:style/Widget.Holo.Light.Spinner"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="2%"
      app:layout_widthPercent="80%"/>

    <!--Security Answer-->
    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_ma_sec_answer"
      android:layout_below="@+id/spinner_ma_sec_question"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ma_tiet_security_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Security Answer"/>
    </com.google.android.material.textfield.TextInputLayout>
   
    <!--Update Security Info Button-->
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_ma_update_sec_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_sec_answer"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />
  </android.support.percent.PercentRelativeLayout>
</ScrollView>