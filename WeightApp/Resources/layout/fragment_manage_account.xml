<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/ma_scroll">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--View User Info-->
    <TextView
      android:id="@+id/tv_your_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Your Info"/>
    <TextView
      android:id="@+id/tv_ma_user_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="3%"
      app:layout_marginLeftPercent="10%"
      android:layout_below="@+id/tv_your_info"
      android:textSize="20sp"
      android:text=""/>

    <!--User Info-->
    <TextView
      android:id="@+id/tv_manage_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_ma_user_info"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Manage Info"/>
    <EditText
      android:id="@+id/et_ma_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_manage_info"
      android:hint="Your Name"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_ma_email"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_name"
      android:hint="Email"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <androidx.appcompat.widget.AppCompatButton 
      android:id="@+id/btn_ma_update_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_email"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />

    <!--Change Password-->
    <TextView
      android:id="@+id/tv_change_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/btn_ma_update_info"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Change Password"/>
    <EditText
      android:id="@+id/et_ma_current_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_change_password"
      android:hint="Current Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_ma_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_current_password"
      android:hint="New Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_ma_confirm_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_password"
      android:hint="Confirm Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <androidx.appcompat.widget.AppCompatButton 
      android:id="@+id/btn_ma_change_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_confirm_password"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />

    <!-- Security Question -->
    <TextView
      android:id="@+id/tv_update_sec_question"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/btn_ma_change_password"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Security Info"/>
    <TextView
      android:id="@+id/spinner_ma_prompt_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_update_sec_question"
      android:text="@string/security_question_prompt"
      app:layout_marginLeftPercent="11%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"/>
    <Spinner
      android:id="@+id/spinner_ma_sec_question"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spinner_ma_prompt_text"
      android:prompt="@string/security_question_prompt"
      style="@android:style/Widget.Holo.Light.Spinner"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="2%"
      app:layout_widthPercent="80%"/>
    <EditText
      android:id="@+id/et_ma_sec_answer"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/spinner_ma_sec_question"
      android:hint="Security Answer"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <androidx.appcompat.widget.AppCompatButton 
      android:id="@+id/btn_ma_update_sec_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_ma_sec_answer"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Update"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />

    <!--Errors-->
    <TextView
      android:id="@+id/txt_ma_errors"
      app:layout_marginLeftPercent="10%"
      android:text=""
      android:layout_below="@+id/btn_ma_update_sec_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#ff0000"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>