<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.1"
    app:srcCompat="@drawable/background_image_measurement"
    android:layout_margin="0dp" />

  <!--Header-->
  <TextView
    android:id="@+id/tv_Profile"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="10%"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="32sp"
    android:text="My Profile"/>

  <TextView
    android:id="@+id/tv_profile_text"
    android:layout_below="@+id/tv_Profile"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="3%"
    app:layout_marginLeftPercent="10%"
    app:layout_marginRightPercent="10%"
    android:justificationMode="inter_word"
    android:textSize="16sp"
    android:text="Please fill out your current information and what your future goals are. Weight App will use this information to bring you up-to-date statistics, providing you with a means to track and monitor current progress against these goals."/>

  <!-- Update Profile-->
 <!-- <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_update_profile"
    android:layout_below="@+id/tv_profile_text"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Update Profile"
    android:textSize="20sp"
    style="@style/Widget.MaterialComponents.Button"
    app:icon="@drawable/ic_menu_profile"
    app:backgroundTint="#00B33C"
    app:layout_marginTopPercent="5%"
    app:layout_marginPercent="5%"
    app:layout_widthPercent="70%" />-->

  <ListView
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_marginTop="-25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_marginTopPercent="5%"
    android:id="@+id/profile_listView"
    android:layout_below="@+id/tv_profile_text"/>
</android.support.percent.PercentRelativeLayout>
