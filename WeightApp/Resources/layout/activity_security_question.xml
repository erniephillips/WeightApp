<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
      android:id="@+id/btn_sq_back"
      android:src="@drawable/ic_back_arrow"
      android:background="@android:color/transparent"
      android:layout_width="50.0dp"
      android:layout_height="50.0dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      app:layout_marginLeftPercent="3%"
      app:layout_marginTopPercent="3%"
      android:layout_gravity="top|left" />
    <TextView
      android:id="@+id/tv_sec_q"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="8%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Security Question"/>
    <TextView
      android:id="@+id/txt_security_question"
      android:text=""
      android:layout_below="@+id/tv_sec_q"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_marginRightPercent="10%"
      app:layout_marginTopPercent="1%"/>
    <EditText
      android:id="@+id/et_security_answer"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/txt_security_question"
      android:hint="Username"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <!-- Login Button -->
    <Button
      android:id="@+id/btn_verify_sa"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_security_answer"
      android:layout_centerHorizontal="true"
      android:background="#004aad"
      android:text="Verify"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />
    <!--Show Sec Question text, textbox, & button-->
    
    <!--Error Text-->
    <TextView
      android:id="@+id/txt_sq_errors"
      android:text=""
      android:layout_below="@+id/btn_verify_sa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#ff0000"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>