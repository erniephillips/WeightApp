<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--App Bar-->
    <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/login_appbar"
      android:theme="@style/AppTheme.AppBarOverlay">
      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetStart="5dp">
        <ImageButton
          android:id="@+id/btn_login_back"
          android:src="@drawable/ic_back_arrow"
          android:background="@android:color/transparent"
          android:layout_width="50.0dp"
          android:layout_height="50.0dp"
          android:layout_marginLeft="-20dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_gravity="top|left" />
      </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    
    <!--Header-->
    <TextView
      android:id="@+id/tv_Login"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/login_appbar"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Login"/>

    <!--Username-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_login_username"
      android:layout_below="@+id/tv_Login"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_tiet_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_login_password"
      android:layout_below="@+id/et_login_username"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_tiet_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_log_login"
      android:layout_below="@+id/et_login_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Login"
      android:textSize="20sp"
      style="@style/Widget.MaterialComponents.Button"
      app:icon="@drawable/ic_login"
      app:backgroundTint="?android:attr/colorPrimary"
      app:layout_marginTopPercent="3%"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="70%" />

    <!--Remember Me-->
    <CheckBox
      android:id="@+id/chk_remember_me"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/btn_log_login"
      android:text="Remember Me"
      app:layout_marginLeftPercent="10%" />

    <!--Forgot Password-->
    <TextView
      android:id="@+id/txt_forgot_password"
      android:text="Forgot Password"
      android:layout_toRightOf="@+id/chk_remember_me"
      android:layout_below="@+id/btn_log_login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:textAlignment="gravity"
      android:textColor="#1874CD"
      app:layout_marginRightPercent="10%"
      app:layout_marginTopPercent="1%"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>