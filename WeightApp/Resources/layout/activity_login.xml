<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageButton
    android:id="@+id/btn_login_back"
    android:src="@drawable/ic_back_arrow"
    android:background="@android:color/transparent"
    android:layout_width="50.0dp"
    android:layout_height="50.0dp"
    android:layout_marginTop="10.0dp"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_gravity="top|left" />
  <TextView
    android:id="@+id/tv_Login"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="8%"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="32sp"
    android:text="Login"/>
  <EditText
    android:id="@+id/et_login_username"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/tv_Login"
    android:hint="Username"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <EditText
    android:id="@+id/et_login_password"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_login_username"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <!-- Login Button -->
  <Button
    android:id="@+id/btn_log_login"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_login_password"
    android:layout_centerHorizontal="true"
    android:background="#004aad"
    android:text="Login"
    android:textColor="#fff"
    android:textSize="20sp"
    app:layout_marginPercent="5%"
    app:layout_widthPercent="80%" />
  <CheckBox
    android:id="@+id/chk_remember_me"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_log_login"
    android:text="Remember Me"
    app:layout_marginLeftPercent="10%" />
   <TextView
    android:id="@+id/txt_login_errors"
    app:layout_marginLeftPercent="10%"
    android:text=""
    app:layout_marginTopPercent="3%"
    android:layout_below="@+id/chk_remember_me"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#ff0000"/>
</android.support.percent.PercentRelativeLayout>