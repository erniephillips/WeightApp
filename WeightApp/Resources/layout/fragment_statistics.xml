<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/reg_scrollview">

  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Header-->
    <TextView
      android:id="@+id/history_statistics"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="My Statistics"/>

    <!--CARDS-->
    <!--Current Weight-->
    <android.support.v7.widget.CardView
      android:id="@+id/card_current_weight"
      android:layout_below="@+id/history_statistics"
      style="@style/CardView.Light"
      app:layout_widthPercent="90%"
      app:layout_marginLeftPercent="5%"
      app:layout_marginTopPercent="3%"
      android:layout_width="match_parent"
      android:layout_height="76dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/avatar_current_weight"
          android:layout_width="52dp"
          android:layout_height="52dp"
          android:layout_marginTop="12dp"
          android:layout_marginStart="12dp"
          android:padding="4dp"
          android:src="@drawable/weight_app_logo_transparent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

        <TextView
          android:id="@+id/title_current_weight"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="Current Weight"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="@+id/avatar_current_weight"
          app:layout_constraintStart_toEndOf="@+id/avatar_current_weight"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/txt_current_weight"
          android:layout_below="@+id/title_current_weight"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="N/A"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/darker_gray"
          app:layout_constraintStart_toEndOf="@+id/avatar_current_weight"
          app:layout_constraintBottom_toBottomOf="@+id/avatar_current_weight"
          app:layout_constraintEnd_toEndOf="parent" />

      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <!--BMI-->
    <android.support.v7.widget.CardView
      android:id="@+id/card_bmi"
      android:layout_below="@+id/card_current_weight"
      style="@style/CardView.Light"
      app:layout_widthPercent="90%"
      app:layout_marginLeftPercent="5%"
      app:layout_marginTopPercent="3%"
      android:layout_width="match_parent"
      android:layout_height="76dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/avatar_bmi"
          android:layout_width="52dp"
          android:layout_height="52dp"
          android:layout_marginTop="12dp"
          android:layout_marginStart="12dp"
          android:padding="4dp"
          android:src="@drawable/weight_app_logo_transparent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

        <TextView
          android:id="@+id/title_bmi"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="BMI"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="@+id/avatar_bmi"
          app:layout_constraintStart_toEndOf="@+id/avatar_bmi"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/txt_bmi"
          android:layout_below="@+id/title_bmi"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="N/A"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/darker_gray"
          app:layout_constraintStart_toEndOf="@+id/avatar_bmi"
          app:layout_constraintBottom_toBottomOf="@+id/avatar_bmi"
          app:layout_constraintEnd_toEndOf="parent" />

      </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!--Average Weekly Weight Loss-->
    <android.support.v7.widget.CardView
      android:id="@+id/card_average_weekly_weight_loss"
      android:layout_below="@+id/card_bmi"
      style="@style/CardView.Light"
      app:layout_widthPercent="90%"
      app:layout_marginTopPercent="3%"
      app:layout_marginLeftPercent="5%"
      android:layout_width="match_parent"
      android:layout_height="76dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/avatar_average_weekly_weight_loss"
          android:layout_width="52dp"
          android:layout_height="52dp"
          android:layout_marginTop="12dp"
          android:layout_marginStart="12dp"
          android:padding="4dp"
          android:src="@drawable/weight_app_logo_transparent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

        <TextView
          android:id="@+id/title_average_weekly_weight_loss"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="Average Weekly Weight Loss"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="@+id/avatar_average_weekly_weight_loss"
          app:layout_constraintStart_toEndOf="@+id/avatar_average_weekly_weight_loss"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/txt_average_weekly_weight_loss"
          android:layout_below="@+id/title_average_weekly_weight_loss"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="N/A"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/darker_gray"
          app:layout_constraintStart_toEndOf="@+id/avatar_average_weekly_weight_loss"
          app:layout_constraintBottom_toBottomOf="@+id/avatar_average_weekly_weight_loss"
          app:layout_constraintEnd_toEndOf="parent" />
      </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!--Average Weekly Weight Loss-->
    <android.support.v7.widget.CardView
      android:id="@+id/card_weight_loss_to_date"
      android:layout_below="@+id/card_average_weekly_weight_loss"
      style="@style/CardView.Light"
      app:layout_widthPercent="90%"
      app:layout_marginTopPercent="3%"
      app:layout_marginLeftPercent="5%"
      android:layout_width="match_parent"
      android:layout_height="76dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/avatar_weight_loss_to_date"
          android:layout_width="52dp"
          android:layout_height="52dp"
          android:layout_marginTop="12dp"
          android:layout_marginStart="12dp"
          android:padding="4dp"
          android:src="@drawable/weight_app_logo_transparent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

        <TextView
          android:id="@+id/title_weight_loss_to_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="Weight Loss to Date"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="@+id/avatar_weight_loss_to_date"
          app:layout_constraintStart_toEndOf="@+id/avatar_weight_loss_to_date"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/txt_weight_loss_to_date"
          android:layout_below="@+id/title_weight_loss_to_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="16dp"
          android:text="N/A"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@android:color/darker_gray"
          app:layout_constraintStart_toEndOf="@+id/avatar_weight_loss_to_date"
          app:layout_constraintBottom_toBottomOf="@+id/avatar_weight_loss_to_date"
          app:layout_constraintEnd_toEndOf="parent" />
      </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!--Chart-->
    <microcharts.droid.ChartView
      android:id="@+id/line_chart"
      android:layout_below="@+id/card_weight_loss_to_date"
      app:layout_marginTopPercent="3%"
      android:layout_width="match_parent"
      android:layout_height="220dp"/>

    <com.google.android.material.card.MaterialCardView
      android:layout_below="@+id/line_chart"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:clickable="true"
      android:focusable="true"
      android:minHeight="148dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
              style="?attr/textAppearanceHeadline6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Title goes here"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:ellipsize="end"
              android:maxLines="1"
              android:text="Secondary message card layouts can vary to support the types of content they contain. The following elements are commonly found among that variety."/>

        

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:maxLines="2"
          android:text="Lorem ipsum dolor sit amet, nec no nominavi scaevola. Per et sint sapientem, nobis perpetua salutandi mei te. Quo tamquam probatus reprehendunt in. Eos esse purto eruditi ea. Enim tation persius ut sea, eos ad consul populo.
Ne eum solet altera. Cibo eligendi et est, electram theophrastus te vel eu."/>


       

      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

  </android.support.percent.PercentRelativeLayout>
</ScrollView>
