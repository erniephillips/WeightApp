<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/reg_scrollview">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Header-->
    <TextView
      android:id="@+id/history_statistics"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="My Statistics"/>

    <TextView
      android:id="@+id/txt_bmi"
      android:text="text"
      android:layout_below="@+id/history_statistics"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp"
      app:layout_marginTopPercent="3%"/>


    <microcharts.droid.ChartView
      android:id="@+id/line_chart"
      android:layout_below="@+id/txt_bmi"
      android:layout_width="match_parent"
      android:layout_height="220dp"/>

  </android.support.percent.PercentRelativeLayout>
</ScrollView>
