<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <!--
    TextView's for labels and EditText for getting value from user
    -->
  <ImageButton
    android:id="@+id/btn_register_back"
    android:src="@drawable/ic_back_arrow"
    android:background="@android:color/transparent"
    android:layout_width="50.0dp"
    android:layout_height="50.0dp"
    android:layout_marginTop="10.0dp"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_gravity="top|left" />
  <TextView
    android:id="@+id/tv_Register"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_marginTopPercent="8%"
    android:layout_centerHorizontal="true"
    android:textStyle="bold"
    android:textSize="32sp"
    android:text="Register"/>
  <EditText
    android:id="@+id/et_username"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/tv_Register"
    android:hint="Username"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <EditText
    android:id="@+id/et_password"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_username"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <EditText
    android:id="@+id/et_confirm_password"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_password"
    android:hint="Confirm Password"
    android:inputType="textPassword"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <EditText
    android:id="@+id/et_name"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_confirm_password"
    android:hint="Your Name"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <EditText
    android:id="@+id/et_email"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_name"
    android:hint="Email"
    android:textColor="#000"
    android:textSize="20sp"
    app:layout_marginLeftPercent="10%"
    app:layout_marginTopPercent="0%"
    app:layout_widthPercent="80%" />
  <!-- Register Button -->
  <Button
    android:id="@+id/btn_reg_register"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/et_email"
    android:layout_centerHorizontal="true"
    android:background="#00B33C"
    android:text="Register"
    android:textColor="#fff"
    android:textSize="20sp"
    app:layout_marginPercent="5%"
    app:layout_widthPercent="80%" />
  <TextView
    android:id="@+id/txt_reg_errors"
    app:layout_marginLeftPercent="10%"
    android:text=""
    android:layout_below="@+id/btn_reg_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#ff0000"/>
</android.support.percent.PercentRelativeLayout>
