<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/reg_scrollview">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
    TextView's for labels and EditText for getting value from user
    -->
    <!--App Bar-->
    <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/register_appbar"
      android:theme="@style/AppTheme.AppBarOverlay">

      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetStart="5dp">
        <ImageButton
          android:id="@+id/btn_register_back"
          android:src="@drawable/ic_back_arrow"
          android:background="@android:color/transparent"
          android:layout_width="50.0dp"
          android:layout_height="50.0dp"
          android:layout_marginLeft="-20dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_gravity="top|left" />
      </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!--Info button-->
    <ImageButton
      android:id="@+id/btn_register_info"
      android:src="@drawable/ic_info"
      android:background="@android:color/transparent"
      android:layout_width="30.0dp"
      android:layout_height="30.0dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      app:layout_marginRightPercent="3%"
      app:layout_marginTopPercent="3%"
      android:layout_gravity="top|end" />

    <!--Header-->
    <TextView
      android:id="@+id/tv_Register"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/register_appbar"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Register"/>

    <!--Username-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_username"
      android:layout_below="@+id/tv_Register"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_password"
      android:layout_below="@+id/et_username"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--Confirm Password-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_confirm_password"
      android:layout_below="@+id/et_password"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--Name-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_name"
      android:layout_below="@+id/et_confirm_password"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Email-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_email"
      android:layout_below="@+id/et_name"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Security Question-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/spinner_reg_sec_question"
      android:layout_below="@+id/et_email"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="Security Question"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%">
      <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/reg_populate_dropdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="none"
        android:cursorVisible="false"
        android:text="Select an item..." />
    </com.google.android.material.textfield.TextInputLayout>
    <!--<TextView
      android:id="@+id/spinner_prompt_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_email"
      android:text="@string/security_question_prompt"
      app:layout_marginLeftPercent="11%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"/>-->
    <!-- Spinner Style
    https://newbedev.com/how-to-create-custom-spinner-like-border-around-the-spinner-with-down-triangle-on-the-right-side
  -->
    <!--<Spinner
      android:id="@+id/spinner_reg_sec_question"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spinner_prompt_text"
      android:prompt="@string/security_question_prompt"
      style="@android:style/Widget.Holo.Light.Spinner"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"/>-->

    <!--Security Answer-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_reg_sec_answer"
      android:layout_below="@+id/spinner_reg_sec_question"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="1%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/register_tiet_security_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Security Answer" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Register Button -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_reg_register"
      android:layout_below="@+id/et_reg_sec_answer"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Register"
      android:textSize="20sp"
      style="@style/Widget.MaterialComponents.Button"
      app:icon="@drawable/ic_registration"
      app:backgroundTint="#00B33C"
      app:layout_marginTopPercent="3%"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="70%" />
  </android.support.percent.PercentRelativeLayout>
</ScrollView>