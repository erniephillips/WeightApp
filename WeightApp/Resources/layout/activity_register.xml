<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
    TextView's for labels and EditText for getting value from user
    -->
    <ImageButton
      android:id="@+id/btn_register_back"
      android:src="@drawable/ic_back_arrow"
      android:background="@android:color/transparent"
      android:layout_width="50.0dp"
      android:layout_height="50.0dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      app:layout_marginLeftPercent="3%"
      app:layout_marginTopPercent="3%"
      android:layout_gravity="top|left" />
    <ImageButton
      android:id="@+id/btn_register_info"
      android:src="@drawable/ic_info"
      android:background="@android:color/transparent"
      android:layout_width="30.0dp"
      android:layout_height="30.0dp"
      android:scaleType="fitCenter"
      android:adjustViewBounds="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      app:layout_marginRightPercent="3%"
      app:layout_marginTopPercent="3%"
      android:layout_gravity="top|end" />
    <TextView
      android:id="@+id/tv_Register"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="8%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Register"/>
    <EditText
      android:id="@+id/et_username"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_Register"
      android:hint="Username"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_username"
      android:hint="Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_confirm_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_password"
      android:hint="Confirm Password"
      android:inputType="textPassword"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_confirm_password"
      android:hint="Your Name"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <EditText
      android:id="@+id/et_email"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_name"
      android:hint="Email"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <TextView
      android:id="@+id/spinner_prompt_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_email"
      android:text="@string/security_question_prompt"
      app:layout_marginLeftPercent="11%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"/>
    <!-- Spinner Style
    https://newbedev.com/how-to-create-custom-spinner-like-border-around-the-spinner-with-down-triangle-on-the-right-side
  -->
    <Spinner
      android:id="@+id/spinner_reg_sec_question"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spinner_prompt_text"
      android:prompt="@string/security_question_prompt"
      style="@android:style/Widget.Holo.Light.Spinner"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="2%"
      app:layout_widthPercent="80%"/>
    <EditText
      android:id="@+id/et_reg_sec_answer"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/spinner_reg_sec_question"
      android:hint="Security Answer"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
    <!-- Register Button -->
    <Button
      android:id="@+id/btn_reg_register"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_reg_sec_answer"
      android:layout_centerHorizontal="true"
      android:background="#00B33C"
      android:text="Register"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />
    <TextView
      android:id="@+id/txt_reg_errors"
      app:layout_marginLeftPercent="10%"
      android:text=""
      android:layout_below="@+id/btn_reg_register"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#ff0000"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>
