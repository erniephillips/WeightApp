<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/fp_appbar"
      android:theme="@style/AppTheme.AppBarOverlay">

      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetStart="5dp">
        <ImageButton
          android:id="@+id/btn_fp_back"
          android:src="@drawable/ic_back_arrow"
          android:background="@android:color/transparent"
          android:layout_width="50.0dp"
          android:layout_height="50.0dp"
          android:layout_marginLeft="-20dp"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
          android:layout_gravity="top|left" />
      </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    
    <TextView
      android:id="@+id/tv_forgot_password"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/fp_appbar"
      app:layout_marginTopPercent="3%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Forgot Password"/>
    <EditText
      android:id="@+id/et_fp_username"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_forgot_password"
      android:hint="Username"
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="0%"
      app:layout_widthPercent="80%" />
   
    <!-- Login Button -->
    <Button
      android:id="@+id/btn_fp_check_username"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/et_fp_username"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorPrimary"
      android:text="Check Username"
      android:textColor="#fff"
      android:textSize="20sp"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="80%" />
    <!--Show Sec Question text, textbox, & button-->
    
    <!--Error Text-->
    <TextView
      android:id="@+id/txt_fp_errors"
      android:text=""
      android:layout_below="@+id/btn_fp_check_username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#ff0000"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"/>
  </android.support.percent.PercentRelativeLayout>
</ScrollView>