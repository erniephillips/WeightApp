  <android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/veggies"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scaleType="fitEnd"
      android:alpha="0.1"
      app:srcCompat="@drawable/background_image_access_page" />

    <!--Header-->
    <TextView
      android:id="@+id/tv_welcome"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      app:layout_marginRightPercent="10%"
      app:layout_marginLeftPercent="10%"
      android:layout_centerHorizontal="true"
      android:justificationMode="inter_word"
      android:textStyle="bold"
      android:textSize="18sp"
      android:text="Welcome to the weight app, a way to track and monitor your progress. Let\'s get you started, by filling out your profile information and targeting your goals."/>
    <TextView
      android:id="@+id/tv_get_started"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/tv_welcome"
      app:layout_marginTopPercent="10%"
      app:layout_marginRightPercent="10%"
      app:layout_marginLeftPercent="10%"
      android:layout_centerHorizontal="true"
      android:justificationMode="inter_word"
      android:textStyle="bold"
      android:textSize="18sp"
      android:text="You can also access the \'User Settings\' feature from the navigation menu at any time to update your information."/>
    <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_go_to_profile"
      android:layout_below="@+id/tv_get_started"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="User Settings"
      android:textSize="20sp"
      style="@style/Widget.MaterialComponents.Button"
      app:icon="@drawable/ic_menu_profile"
      app:backgroundTint="?android:attr/colorPrimary"
      app:layout_marginTopPercent="10%"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="70%" />
  </android.support.percent.PercentRelativeLayout>
