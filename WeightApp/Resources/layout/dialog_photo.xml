<?xml version="1.0" encoding="utf-8" ?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="start">

  <!-- Login Button -->
  <Button
    android:id="@+id/dp_btn_take_photo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Take Photo"
    android:textColor="#000"
    android:gravity="left|center_vertical"
    android:drawableLeft="@android:drawable/ic_menu_camera"
    style="?android:attr/borderlessButtonStyle"
    app:layout_widthPercent="100%"/>
  <Button
    android:id="@+id/dp_btn_gallery"
    android:layout_below="@+id/dp_btn_take_photo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Upload Photo"
    android:textColor="#000"
    android:gravity="left|center_vertical"
    android:drawableLeft="@android:drawable/ic_menu_gallery"
    style="?android:attr/borderlessButtonStyle"
    app:layout_widthPercent="100%"/>
   <Button
    android:id="@+id/dp_btn_delete_photo"
    android:layout_below="@+id/dp_btn_gallery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete Photo"
    android:textColor="#000"
    android:gravity="left|center_vertical"
    android:drawableLeft="@drawable/ic_trash"
    style="?android:attr/borderlessButtonStyle"
    app:layout_widthPercent="100%"/>
