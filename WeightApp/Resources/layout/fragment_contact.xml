<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/contact_scrollview">
  <android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Header-->
    <TextView
      android:id="@+id/tv_contact"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_marginTopPercent="10%"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:textSize="32sp"
      android:text="Contact"/>

    <!--Name-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_contact_your_name"
      android:layout_below="@+id/tv_contact"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contact_tiet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Contact Reason Drop Down-->
    <TextView
      android:id="@+id/contact_spinner_prompt_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_contact_your_name"
      android:text="@string/contact_page_dropdown_prompt"
      app:layout_marginLeftPercent="11%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"/>
    <Spinner
      android:id="@+id/spinner_contact_reason"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/contact_spinner_prompt_text"
      android:prompt="@string/contact_page_dropdown_prompt"
      style="@android:style/Widget.Holo.Light.Spinner"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="2%"
      app:layout_widthPercent="80%"/>

    <!--Username-->
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/et_contact_comments"
      android:layout_below="@+id/spinner_contact_reason"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      app:layout_marginLeftPercent="10%"
      app:layout_marginTopPercent="3%"
      app:layout_widthPercent="80%"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contact_tiet_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:lines="4"
        android:hint="Comments" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_contact_submit"
      android:layout_below="@+id/et_contact_comments"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="Submit"
      android:textSize="20sp"
      style="@style/Widget.MaterialComponents.Button"
      app:icon="@drawable/ic_menu_contact_mail"
      app:backgroundTint="?android:attr/colorPrimary"
      app:layout_marginTopPercent="3%"
      app:layout_marginPercent="5%"
      app:layout_widthPercent="70%" />

   
    <!--Visit My Portfolio-->
    <TextView
      android:id="@+id/txt_visit_me"
      android:text="For more work, please visit my portfolio at"
      android:layout_below="@+id/btn_contact_submit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="14sp"
      app:layout_marginLeftPercent="10%"
      app:layout_marginRightPercent="10%"
      app:layout_marginTopPercent="3%"/>
    <TextView
      android:id="@+id/website_link"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_below="@+id/txt_visit_me"
      android:textColorLink="#004aad"
      android:textSize="18sp"
      android:text="https://erniephillips.github.io"
      android:autoLink="web" />
  </android.support.percent.PercentRelativeLayout>
</ScrollView>